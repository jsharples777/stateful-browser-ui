{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "noEmit": false,
    "esModuleInterop": true,
    "declaration": true,
    "isolatedModules": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "outDir": "./dist"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./node_modules"
  ]

}